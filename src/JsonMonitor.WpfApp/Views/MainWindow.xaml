<Window x:Class="JsonMonitor.WpfApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Garden Tools Monitor" Height="600" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="{Binding Title}" FontSize="20" FontWeight="Bold"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
            <Button Content="Check Status" Command="{Binding RefreshCommand}" Margin="5" Padding="10,5"/>
            <Button Content="Start Monitoring" Command="{Binding StartMonitoringCommand}" Margin="5" Padding="10,5"/>
            <Button Content="Stop Monitoring" Command="{Binding StopMonitoringCommand}" Margin="5" Padding="10,5"/>
        </StackPanel>

        <DataGrid Grid.Row="2" ItemsSource="{Binding Items}" AutoGenerateColumns="False" Margin="0,0,0,15">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Tool" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Value}" Width="*"/>
                <DataGridTextColumn Header="Time" Binding="{Binding Timestamp, StringFormat='HH:mm:ss'}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <TextBlock Grid.Row="3" Text="{Binding StatusMessage}"/>
    </Grid>
</Window>